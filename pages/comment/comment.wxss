/* pages/comment/comment.wxss */
.container2{
   background-color: rgba(235, 236, 237, 1);
   display: flex;
   align-items: center;
   flex-direction: column;
   z-index: 1000;
  }
  .background{
    width: 100%;
    position: fixed;
    height: 100%;
    z-index:-1;
    background-color: rgba(235, 236, 237, 1);
  }
.message{
  height: 250px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction:column;
   
  border-end-start-radius: 100rpx 100rpx;
  border-end-end-radius: 100rpx 100rpx;
  background-color: white;

}
.photo{
  height: 250rpx;
  width: 250rpx;
  background-color: black;
  
}
.description{
  height:50rpx ;
  width: 320rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.details{
height:180rpx ;
background-color:white;
width: 600rpx;
margin-top: 42rpx;
display: flex;
align-items: center;
justify-content: center;
border-radius: 50rpx;
}
.details-circular{
  height: 140rpx;
  width: 140rpx;
  background-color:rgba(235, 236, 237, 1); 
  border-radius: 100%;
  
}
.details-description{
  width: 192rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  
 margin-left: 20rpx;
}
.details-cirxular2{
  height: 40rpx;
  width: 40rpx;
  background-color: red;
  border-radius: 100%;
}
.comment{
  width: 600rpx;
  margin-bottom: 150rpx;
  margin-top: 42rpx;
  background-color: white;
  border-radius: 40rpx;
 
}
.details-click{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
 margin-left: 20rpx;
}
.comment-title{
  height: 100rpx;
  display: flex;
  align-items: center;
  padding-left:  20rpx;
  border-bottom: 4rpx solid rgba(235, 236, 237, 1);
}
.comment-container{
  border-bottom: 4rpx solid rgba(235, 236, 237, 1) ;
}

.comment-name{
  height: 60rpx;
  display: flex;
  margin-top: 25rpx;
  align-items: center;
}
.comment-name-circle{
  height: 60rpx;
  width: 60rpx;
  background-color:  rgba(204, 204, 204, 1);
  border-radius: 100%;
  margin-left: 25rpx;
}
.comment-name-words{
  margin-left: 15rpx;
}
.comment-content{
  margin-left: 30rpx;
  margin-top: 15rpx;
  margin-bottom: 8rpx;
}
.comment-reply{
  background-color: rgba(242, 240, 240, 1);
  height: 250rpx;
  width: 550rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
}
.comment-reply-name{
  height: 60rpx;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}
.comment-reply-click{
  font-size: 24rpx;
  color: blue;
  position: relative;
  top:110rpx;
  text-align: right;
  right: 10rpx;
}
.input{
  width: 100%;
  bottom: 0rpx;
  background-color:rgba(235, 236, 237, 1);
  display: flex;
  justify-content: center;
  position: fixed;
  align-items:center;
  height: 120rpx;
}
.input-text{
  width: 500rpx;
  height: 60rpx;
  border:3rpx solid black  ;
  border-radius: 20rpx;
  z-index: 100;
 margin-bottom: 5rpx;
}
.input-button{
  width: 70rpx;
  background-color: rgb(180, 248, 180);
  height: 50rpx;
  border-radius: 20rpx;
  color: rgb(240, 190, 190);
  z-index: 100;
  margin-left: 10rpx;
}
