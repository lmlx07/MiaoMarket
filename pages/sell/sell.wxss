.a{
    display: flex;
    flex-direction: column;
    height: 100vh;
    align-items: center;
    justify-content: center;

}

.bbox{
    background: white;
    width: 200px;
    height: 25px;
    border: black 1px solid;
    margin: 10px 0px 0px 0px;
}
.cbox{
    background: white;
    width: 200px;
    height: auto;
    border: black 1px solid;
    border-end-start-radius: 10px  10px;
    border-end-end-radius: 10px 10px;
    align-items: center;
    justify-content: center;
    display: flex;
    
    flex-direction: column;
}
.cbox .content{
    height: 30px;
    width: 200px;
    border-top: gray  1px solid;
    display: flex;
    align-items: center;
    justify-content: center;
}

.click{
  margin-left: 0px;
}
image{
  position: absolute;
  left: 0;
  bottom:0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -99;
}